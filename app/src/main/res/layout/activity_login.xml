<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbackground"
    tools:context=".activity.SignupActivity">


    <TextView
        android:id="@+id/Title"
        android:layout_width="384dp"
        android:layout_height="74dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/archivo_black"
        android:text="Dinner Dropper"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45sp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="127dp"
        android:layout_height="97dp"
        android:layout_below="@+id/Title"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/dinnerdropperlogo" />

    <EditText
        android:id="@+id/login_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/logininput2_design"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
         />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/logininput2_design"
        android:hint="Password"
        android:layout_below="@id/login_phonenumber"
        android:inputType="textPassword"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="140dp"
        android:layout_height="29dp"
        android:layout_below="@+id/login_password"
        android:layout_alignParentRight="true"
        android:text="Forgot Password?"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/remember_me_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_alignParentLeft="true"
        android:text="Keep me signed in."
        android:layout_marginBottom="40dp"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_nowbtn"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@id/remember_me_check"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:text="Login"
        android:textColor="@color/white" />



</RelativeLayout>