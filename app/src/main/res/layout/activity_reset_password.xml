<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResetPasswordActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_reset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleresetpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="133dp"
                    android:layout_marginEnd="133dp"
                    android:text="Reset Password"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/resetPhone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/app_bar_reset"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/logininput2_design"
        android:hint="Please write your phone number"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/resetPhone"
        android:text="Answer the following Security Questions"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/resetq1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/resetText"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/logininput2_design"
        android:hint="Who is your most memorable teacher?"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/resetq2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/resetq1"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/logininput2_design"
        android:hint="what favourite superhero?"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/verifybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        android:layout_below="@+id/resetq2"
        android:background="@drawable/input_design"/>


</RelativeLayout>